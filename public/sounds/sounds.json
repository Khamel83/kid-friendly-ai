  "globalSettings": {
    "masterVolume": 0.8,
    "defaultVolume": 0.5,
    "maxVolume": 1.0,
    "fadeDuration": 0.3,
    "crossfadeDuration": 0.5,
    "cacheSize": 50,
    "preloadStrategy": "adaptive",
    "compression": {
      "enabled": true,
      "quality": 0.8,
      "bitrate": 128
    }
  },
  "accessibility": {
    "enabled": true,
    "visualFeedback": true,
    "closedCaptions": true,
    "vibrationFeedback": true,
    "reducedMotion": false,
    "highContrast": false,
    "screenReader": true
  },
  "parentalControls": {
    "maxVolume": 0.8,
    "allowedCategories": ["ui", "game", "educational", "music"],
    "contentFilter": "moderate",
    "timeLimits": {
      "startTime": "08:00",
      "endTime": "20:00"
    },
    "dailyLimit": 120
  }
