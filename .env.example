# ===================================================================
# Kid-Friendly AI Environment Variables
# ===================================================================
# Copy this file to .env.local for local development
# Set these variables in your Vercel project settings for production

# ===================================================================
# AI API Keys (Required for core functionality)
# ===================================================================

# OpenRouter API Key for AI chat completion
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenAI API Key for TTS (Text-to-Speech) and Whisper
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===================================================================
# Application Configuration
# ===================================================================

# Site URL for production
NEXT_PUBLIC_SITE_URL=https://kid-friendly-ai.vercel.app

# Vercel deployment URL
NEXT_PUBLIC_VERCEL_URL=https://kid-friendly-ai.vercel.app

# Node environment (development/production/test)
NODE_ENV=production

# ===================================================================
# Analytics and Monitoring (Optional)
# ===================================================================

# Google Analytics 4 Measurement ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics (automatically enabled in Vercel deployments)
# NEXT_PUBLIC_VERCEL_ANALYTICS=true

# ===================================================================
# Performance and Optimization
# ===================================================================

# Enable bundle analyzer for production builds
# ANALYZE=false

# Enable compression
# ENABLE_COMPRESSION=true

# Image optimization domains (comma-separated)
# NEXT_PUBLIC_IMAGE_DOMAINS=example.com,cdn.example.com

# ===================================================================
# Security and Rate Limiting
# ===================================================================

# API rate limiting (requests per minute)
# RATE_LIMIT_RPM=60

# API rate limiting (requests per hour)
# RATE_LIMIT_RPH=1000

# Enable CORS for specific origins
# CORS_ORIGIN=https://kid-friendly-ai.vercel.app

# ===================================================================
# Feature Flags
# ===================================================================

# Enable voice input feature
# NEXT_PUBLIC_ENABLE_VOICE_INPUT=true

# Enable parental controls
# NEXT_PUBLIC_ENABLE_PARENTAL_CONTROLS=true

# Enable sound effects
# NEXT_PUBLIC_ENABLE_SOUND_EFFECTS=true

# Enable accessibility features
# NEXT_PUBLIC_ENABLE_ACCESSIBILITY=true

# Enable pattern puzzle game
# NEXT_PUBLIC_ENABLE_PATTERN_PUZZLE=true

# Enable animal quiz game
# NEXT_PUBLIC_ENABLE_ANIMAL_QUIZ=true

# ===================================================================
# Content Delivery and Caching
# ===================================================================

# CDN URL for static assets
# NEXT_PUBLIC_CDN_URL=https://cdn.kid-friendly-ai.vercel.app

# Cache duration for static assets (in seconds)
# NEXT_PUBLIC_CACHE_DURATION=31536000

# ===================================================================
# API Configuration
# ===================================================================

# Default AI model for chat completions
# DEFAULT_AI_MODEL=google/gemini-2.5-flash-lite

# Maximum tokens for AI responses
# MAX_TOKENS=500

# Temperature for AI responses (0.0-1.0)
# AI_TEMPERATURE=0.8

# Streaming timeout for AI responses (in milliseconds)
# STREAMING_TIMEOUT=15000

# ===================================================================
# Audio Configuration
# ===================================================================

# Default voice for TTS
# DEFAULT_TTS_VOICE=shimmer

# TTS model (tts-1 or tts-1-hd)
# TTS_MODEL=tts-1

# Audio format for TTS (mp3, opus, aac, flac)
# TTS_AUDIO_FORMAT=mp3

# Whisper model for transcription
# WHISPER_MODEL=whisper-1

# Language for transcription (ISO 639-1 code)
# TRANSCRIPTION_LANGUAGE=en

# ===================================================================
# Development and Testing
# ===================================================================

# Enable debug logging
# DEBUG=false

# Enable test mode
# TEST_MODE=false

# Mock API responses for development
# MOCK_API=false

# ===================================================================
# Social Media and Sharing
# ===================================================================

# Twitter handle for social sharing
# NEXT_PUBLIC_TWITTER_HANDLE=@kidfriendlyai

# Facebook App ID for sharing
# NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id

# ===================================================================
# Email and Notifications (Future Use)
# ===================================================================

# Email service provider (sendgrid, mailgun, etc.)
# EMAIL_SERVICE_PROVIDER=

# Email API key
# EMAIL_API_KEY=

# From email address
# FROM_EMAIL=noreply@kid-friendly-ai.vercel.app

# ===================================================================
# Legal and Compliance
# ===================================================================

# Privacy policy URL
# NEXT_PUBLIC_PRIVACY_POLICY_URL=/privacy

# Terms of service URL
# NEXT_PUBLIC_TERMS_URL=/terms

# Cookie policy URL
# NEXT_PUBLIC_COOKIE_POLICY_URL=/cookies

# Age verification required
# NEXT_PUBLIC_REQUIRE_AGE_VERIFICATION=false

# ===================================================================
# Internationalization (i18n)
# ===================================================================

# Default language
# DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
# SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,ko,zh

# ===================================================================
# Environment-specific Overrides
# ===================================================================

# Production overrides
# PRODUCTION_OPENROUTER_API_KEY=
# PRODUCTION_OPENAI_API_KEY=

# Development overrides
# DEVELOPMENT_OPENROUTER_API_KEY=
# DEVELOPMENT_OPENAI_API_KEY=

# ===================================================================
# Notes
# ===================================================================
# 1. Never commit your actual .env.local file to version control
# 2. Always use environment variables for sensitive data
# 3. Test your configuration locally before deploying to production
# 4. Regularly rotate your API keys for security
# 5. Monitor your API usage and costs
# 6. Keep your dependencies up to date for security
# 7. Use Vercel's environment variable management for production deployments